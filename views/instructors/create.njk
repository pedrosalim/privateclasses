{% extends "layout.njk" %}

{% block content %}

<form class="card" method="POST" action="/instructors">
    <section 
        class="avatar" 
        style="background: url(https://source.unsplash.com/collection/332741/900x900) no-repeat center center">
    </section>

    <section class="details">
        <h3>Novo Professor</h3>

        <div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://"
                >
            </div>
        </div>

        <div class="item">
            <div>Professor</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Seu nome"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth"
                value="{{ teacher.birth }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="grau">
                    <option value="M">Ensino Médio Completo</option>
                    <option value="S">Ensino Superior Completo</option>
                    <option value="ME">Mestrado</option>
                    <option value="D">Doutorado</option>
                </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input type="radio" name="type" value="P">Presencial</span>
                <span><input type="radio" name="type" value="D">À distância</span>
            </div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                <input 
                    type="text" 
                    name="acting"
                    placeholder="Separe as matérias oferecidas por vírgula"
                >
            </div>
        </div>

        <div class="item">
            <div>Valor hora aula</div>
            <div>
                <input 
                    type="text" 
                    name="value"
                    placeholder="Ex: 50 Reais"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>

    </section>
</form>

{% endblock content %}