{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ teacher.avatar_url }}) no-repeat center center">
    </section>

    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Professor</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.birth }}</div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>{{ teacher.grau }}</div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>{{ "Presencial" if teacher.type == 'P' else "A Dist√¢ncia"}}</div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {% for acting in teacher.acting %}
                    <span>{{ acting }}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Valor hora</div>
            <div>{{ teacher.value }}</div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <a href="#" class="button">Editar</a>

    </section>
</div>

{% endblock content %}