<div class="item">
            <div>Avatar URL</div>
            <div>
                <input 
                    type="url" 
                    name="avatar_url" 
                    placeholder="http://"
                    value="{{ teacher.avatar_url }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Professor</div>
            <div>
                <input 
                    type="text" 
                    name="name"
                    placeholder="Seu nome"
                    value="{{ teacher.name }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Data de nascimento</div>
            <div>
                <input 
                type="date" 
                name="birth"
                value="{{ teacher.birth }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Grau de escolaridade</div>
            <div>
                <select name="scholarity">
            <option
                value="None"
                {% if teacher.scholarity == "None" %}
                    selected
                {% endif %}
                >-- Select --
            </option>
            <option
                value="Ensino Médio"
                {% if teacher.scholarity == "Ensino Médio" %}
                    selected
                {% endif %}
                >Ensino Médio
            </option>
            <option
                value="Ensino Superior"
                {% if teacher.scholarity == "Ensino Superior" %}
                    selected
                {% endif %}
                >Ensino Superior
            </option>
            <option
                value="Mestrado"
                {% if teacher.scholarity == "Mestrado" %}
                    selected
                {% endif %}
                >Mestrado
            </option>
            <option
                value="Doutorado"
                {% if teacher.scholarity == "Doutorado" %}
                    selected
                {% endif %}
                >Doutorado
            </option>
            
        </select>
            </div>
        </div>

        <div class="item">
            <div>Tipo de aula</div>
            <div>
                <span><input 
                    type="radio" 
                    name="type" 
                    value="P"
                    {% if teacher.type == "P"%}
                    checked
                    {% endif %}>Presencial
                </span>
                <span><input 
                    type="radio" 
                    name="type" 
                    value="D"
                    {% if teacher.type == "D"%}
                    checked
                    {% endif %}>À distância
                </span>
            </div>
        </div>

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                <input 
                    type="text" 
                    name="acting"
                    placeholder="Separe as matérias oferecidas por vírgula"
                    value="{{ teacher.acting }}"
                >
            </div>
        </div>

        <div class="item">
            <div>Valor hora aula</div>
            <div>
                <input 
                    type="text" 
                    name="value"
                    placeholder="Ex: 50 Reais"
                    value="{{ teacher.value }}"
                >
            </div>
        </div>

        <button type="submit">Salvar</button>