<div class="item">
<div>Avatar URL</div>
    <div>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="http://"
        value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
        type="text" 
        name="name"
        value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
        type="email" 
        name="email"
        value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
        type="date" 
        name="birth"
        value="{{ student.birth }}"
        >
    </div>
</div>

<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="year">
            <option value="Quinta Série"
            {% if student.year == "Quinta Série" %}selected{% endif %}
            >Quinto Ano</option>
            <option value="Sexta Série"
            {% if student.year == "Sexta Série" %}selected{% endif %}
            >Sexto Ano</option>
            <option value="Sétima Série"
            {% if student.year == "Sétima Série" %}selected{% endif %}
            >Sétimo Ano</option>
            <option value="Oitava Série"
            {% if student.year == "Oitava Série" %}selected{% endif %}
            >Oitavo Ano</option>
            <option value="Nona Série"
            {% if student.year == "Nona Série" %}selected{% endif %}
            >Nono Ano</option>
            <option value="Primeiro Ano"
            {% if student.year == "Primeiro Ano" %}selected{% endif %}
            >Primeiro Ano</option>
            <option value="Segundo Ano"
            {% if student.year == "Segundo Ano" %}selected{% endif %}
            >Segundo Ano</option>
            <option value="Terceiro Ano"
            {% if student.year == "Terceiro Ano" %}selected{% endif %}
            >Terceiro Ano</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Carga Horária Semanal</div>
    <div>
        <input 
        type="number" 
        name="carga"
        value="{{ student.carga }}"
        >
    </div>
</div>


<button type="submit">Salvar</button>